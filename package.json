{
  "name": "invoke-paragon-action",
  "version": "1.0.0",
  "description": "Trigger any Paragon endpoint from your actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "npm run build && npm run format && npm run lint && npm run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kedoska/invoke-paragon-action.git"
  },
  "keywords": [
    "actions",
    "Paragon",
    "automation",
    "trigger"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "author": "Marco Casula",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kedoska/invoke-paragon-action/issues"
  },
  "homepage": "https://github.com/kedoska/invoke-paragon-action#readme",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^2.1.1",
    "@octokit/webhooks": "^7.1.2",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "@types/node-fetch": "^2.5.6",
    "@typescript-eslint/parser": "^2.8.0",
    "@types/js-yaml": "^3.12.3",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.6.4"
  }
}
